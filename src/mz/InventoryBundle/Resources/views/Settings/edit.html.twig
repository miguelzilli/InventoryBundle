{% extends 'mzInventoryBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Settings
{% endblock %}

{% block page_title %} Settings {% endblock %}

{% block content %}
    <div class="well">
        <form action="{{ path('settings_update', { 'className': entity.className|lower, 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT" />
            {{ form_widget(edit_form) }}
            <p>
                <a class="btn" href="{{ path('settings_index') }}"> Cancel</a>
                <button type="submit" class="btn btn-primary"><i class="icon-save"> </i> Save</button>
            </p>
        </form>
    </div>
{% endblock %}