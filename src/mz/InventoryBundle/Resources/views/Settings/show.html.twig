{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Category'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
<h1>Category</h1>

<form class="form-horizontal">
    <fieldset>            <div class="control-group">
                <label class="control-label">Id</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                </div>
            </div>            <div class="control-group">
                <label class="control-label">Name</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.name }}</span>                </div>
            </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('categories') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('categories_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('categories_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'MWSimpleCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>{% endblock %}